<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .edit-form {
            max-width: 600px;
            margin: 30px auto;
            background-color: var(--card-bg-color); /* Utilisation de la variable */
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .edit-form label {
            font-weight: bold;
            display: block;
            margin-top: 15px;
        }
        .edit-form button {
            margin-top: 25px;
        }
        /* Style pour le bouton Mode Sombre */
        #dark-mode-toggle {
            background: none;
            border: none;
            cursor: pointer;
            font-size: 1.5em;
            color: var(--text-color);
            margin-left: 15px;
            transition: color 0.3s;
        }
        #dark-mode-toggle:hover {
            color: var(--primary-color);
        }
    </style>
</head>
<body class="light-mode">
    
    <div style="display: flex; justify-content: space-between; align-items: center; max-width: 1200px; margin: 0 auto;">
        <h1><%= pageTitle %></h1>
        <div style="display: flex; align-items: center;">
            <a href="/" class="btn btn-secondary">
                ‚Üê Annuler
            </a>
            <button id="dark-mode-toggle" aria-label="Activer le mode sombre">üåô</button>
        </div>
    </div>

    <section class="edit-form">
        <form action="/edit/update/<%= idea._id %>" method="POST">
            
            <div>
                <label for="title">Titre de l'Id√©e :</label>
                <input type="text" id="title" name="title" value="<%= idea.title %>" required>
            </div>
            
            <div>
                <label for="description">Description :</label>
                <textarea id="description" name="description" required><%= idea.description %></textarea>
            </div>

            <div>
                <label for="category">Cat√©gorie :</label>
                <input type="text" id="category" name="category" value="<%= idea.category %>">
            </div>

            <div>
                <label for="status">Statut :</label>
                <select id="status" name="status" required>
                    <% 
                        const statuses = ['Draft', 'In Progress', 'Published', 'Archived'];
                        statuses.forEach(s => {
                            const isSelected = idea.status === s ? 'selected' : '';
                    %>
                            <option value="<%= s %>" <%= isSelected %>><%= s %></option>
                    <%
                        });
                    %>
                </select>
            </div>
            
            <div>
                <label for="youtubeVideoId">ID de la Vid√©o YouTube (si publi√©) :</label>
                <input type="text" id="youtubeVideoId" name="youtubeVideoId" value="<%= idea.youtubeVideoId || '' %>" placeholder="Ex: dQw4w9WgXcQ">
                <p style="font-size: 0.8em; color: var(--border-color);">Remplissez ceci lorsque la vid√©o est en ligne pour suivre ses stats.</p>
            </div>

            <button type="submit" class="btn-primary">Enregistrer les Modifications</button>
        </form>
    </section>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const toggle = document.getElementById('dark-mode-toggle');
        const body = document.body;
        const currentTheme = localStorage.getItem('theme');
        
        if (currentTheme) {
            body.classList.remove('light-mode', 'dark-mode');
            body.classList.add(currentTheme);
            toggle.textContent = currentTheme === 'dark-mode' ? '‚òÄÔ∏è' : 'üåô';
        } else {
            body.classList.add('light-mode');
            toggle.textContent = 'üåô';
        }

        if(toggle) {
            toggle.addEventListener('click', () => {
                const newTheme = body.classList.contains('light-mode') ? 'dark-mode' : 'light-mode';
                body.classList.remove('light-mode', 'dark-mode');
                body.classList.add(newTheme);
                localStorage.setItem('theme', newTheme);
                toggle.textContent = newTheme === 'dark-mode' ? '‚òÄÔ∏è' : 'üåô';
            });
        }
    });
</script>
</body>
</html>